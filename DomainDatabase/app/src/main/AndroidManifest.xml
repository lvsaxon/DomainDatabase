<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.domain_database" >


    <uses-permission
        android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".DomainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register Class -->
        <activity
            android:name=".CharacterRegister"
            android:label="Character Register"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <!-- Personal Char Info  -->
        <activity
            android:name=".CharacterAccount"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <!-- Admin Character List -->
        <activity
            android:name=".Administrator_Character_Account"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <!-- Admin Login -->
        <activity
            android:name=".AdministratorLogin"
            android:label="@string/admin_login_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >

            <intent-filter >
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>
    </application>

</manifest>
